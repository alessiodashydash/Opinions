{
    "name": "Facts & Opinions",
    "version": "0.0.0.1",
    "description": "Copy an article and get AI-powered bullet lists of facts & opinions. Uses OpenAI. Easy and quick!",
    "action": {
      "default_popup": "popup/popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "storage",
      "scripting",
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "author": "Alessio Ricco",
    "manifest_version": 3
  }
  